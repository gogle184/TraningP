      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", user_path(current_user), class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "研修一覧", contents_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "お問合せ", new_contact_path, class: "nav-link active" %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", admin_path(current_admin), class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "研修一覧", contents_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "研修作成", new_content_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", destroy_admin_session_path, method: :delete, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "お問合せ", new_contact_path, class: "nav-link active" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログインはこちら", new_user_session_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "管理者はこちら", new_admin_session_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to "お問合せ", new_contact_path, class: "nav-link active" %>
          </li>
        <% end %>
      </ul>
