<div class="welcome-board">
  <div class="main-image">
    <img src="/assets/main-page.png" class= "img-fluid" style="width: 100">
  </div>
  <div class="welcome-header">
    <h1><span class="marker_yellow">３つの時間を無くしませんか？</span></h1>
  </div>
  <%= render 'home/card'%>
    <div class="login-contents">
      <% if admin_signed_in? %>
        <div class="btn-group-vertical d-flex justify-content-center">
          <%= link_to "研修一覧", contents_path, class: "btn btn-primary" %>
          <%= link_to "研修作成", new_content_path, class: "btn btn-primary" %>
        </div>
      <% elsif user_signed_in? %>
        <div class="btn-group-vertical d-flex justify-content-center">
          <%= link_to "研修一覧", contents_path, class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
    </div>
  <%= render 'home/about'%>
</div>
