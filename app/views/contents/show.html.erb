<div class="content-wrapper">
  <div class="container-fluid">
    <div class="content-detail">
      <div class="content-update">
      <%= react_component("PageTitle", { title: @content.title }) %>
      <% if admin_signed_in? %>
        <%= link_to "編集", edit_content_path(@content) %>
        <%= link_to "削除", @content, method: :delete, data: { confirm: "本当に削除しますか?" } %>
      <% end %>
      </div>
      <p class="content-description"><%= @content.description %></p>
      <hr>
      <% if @content.video.present? %>
      <div class = "content-video">
        <%= video_tag(@content.video.to_s, :size => "400x300", :controls => true)  %>
      </div>
      <% end %>
      <% if @content.youtube_url.present? %>
      <div class="content-youtube">
        <iframe src="https://www.youtube.com/embed/<%= @content.youtube_url.last(11) %>" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="" frameborder="0" height="300" width="400"></iframe>
      </div>
      <% end %>
      <div class="content-content">
        <%= @content.text %>
      </div>
      <hr>
      <%= link_to "戻る", contents_path%>
    </div>
  </div>
</div>
