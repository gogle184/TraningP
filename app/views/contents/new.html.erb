<div class = "content-create">
  <h1>New Content</h1>
  <%= form_with(model: @content, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
      <%= render 'shared/error_messages', object: @content, attribute: :title %>
    </div>

    <div class="field">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.where(admin_id: current_admin.id), :id, :title, { prompt: '選択してください'} %>
      <%= render 'shared/error_messages', object: @content, attribute: :category_id %>
    </div>

    <div class = "category-message">
      <p>該当するカテゴリーがない場合、<%= link_to 'ここ', categories_path %>から登録してください。</p>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
      <%= render 'shared/error_messages', object: @content, attribute: :description %>
    </div>

    <div class = "field">
      <%= form.label :video%>
      <%= form.file_field :video %>
    </div>

    <div class = "field">
      <%= form.label :youtube_url%>
      <%= form.text_field :youtube_url %>
    </div>    

    <div class="field">
      <%= form.label :text %>
      <%= form.rich_text_area :text %>
      <%= render 'shared/error_messages', object: @content, attribute: :text %>
    </div>
    <%= form.hidden_field :admin_id, value: current_admin.id %>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>

